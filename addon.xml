<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.tetplus-unofficial" version="0.5" name="Tet Plus (unofficial)" provider-name="karoisuzvards,janhouse,martinsbalodis">
	<requires>
		<import addon="xbmc.python" version="3.0.0"/>
		<import addon="pvr.iptvsimple" optional="true"/>
		<import addon="inputstream.adaptive"/>
		<import addon="script.module.inputstreamhelper"/>
		<import addon="script.module.pytz"/>
		<import addon="script.module.dateutil"/>
		<import addon="script.module.requests"/>
		<import addon="script.module.requests-cache"/>
		<import addon="script.module.beautifulsoup4"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="addon.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.service" library="service.py" start="login"/>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_gb">Tet Plus Live TV + Series (unofficial)</summary>
		<description lang="en_gb">Watch Tet Plus from Kodi</description>
		<platform>all</platform>
		<website>https://github.com/karoisuzvards/plugin.video.tetplus</website>
		<source>https://github.com/karoisuzvards/plugin.video.tetplus</source>
		<news>
0.5 
* add continue watching 
0.4
* add pagination for series and films
* cache requests for 1 day to improve perf
0.3
* support for films
0.2
* support for series
0.1
* login with Tet plus credentials is supported
* Live TV support (uses DASH protocol)
		</news>
		<assets>
        	<icon>resources/icon.png</icon>
		</assets>
	</extension>
</addon>